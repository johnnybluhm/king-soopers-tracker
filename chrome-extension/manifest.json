{
    "name": "Getting Started Example",
    "description": "Build an extension!",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": ["storage", "tabs"],

    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "/images/logo.png",
            "32": "/images/logo.png",
            "48": "/images/logo.png",
            "128": "/images/logo.png"
            }
    },
    "background": {
        "service_worker": "background.js"
    },
    
    "icons": {
        "16": "/images/logo.png",
        "32": "/images/logo.png",
        "48": "/images/logo.png",
        "128": "/images/logo.png"
      }
  }